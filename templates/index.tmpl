{{define "index"}}
{{template "header"}}
         
    <a name="" id="" class="btn btn-primary" href="/create" role="button"> Add employee </a>

    <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Correo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
        {{range.}}    
                <tr>
                    <td>{{.Id}}</td>
                    <td>{{.Name}}</td>
                    <td>{{.Email}}</td>
